@page
@model WebApp.Pages.Book.EditModel
@{
}


<form method="post">
	<div class="mb-3">
		<label asp-for="Book.Id" class="form-label">BookId</label>
		<input asp-for="Book.Id" class="form-control" disabled />		
	</div>
	<div class="mb-3">
		<label asp-for="Book.Title" class="form-label">Title</label>
		<input asp-for="Book.Title" class="form-control" />
		<span asp-validation-for="Book.Title"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Book.Description" class="form-label">Description</label>
		<input asp-for="Book.Description" class="form-control" />
		<span asp-validation-for="Book.Description"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Book.AuthorName" class="form-label">AuthorName</label>
		<select asp-for="Book.AuthorId" asp-items="@Model.Authors" class="form-control">
		</select>
	</div>
	<br />
	<div class="mb-3">
		<button class="btn btn-primary" type="submit" asp-route-id="@Model.Book.Id">Update</button>
		<button class="btn btn-primary" asp-page="index">Back</button>
	</div>
</form>